@model LabApplicationBackendLayer.Models.Employee

@{
    ViewData["Title"] = "Generate Lock";
}
<h3>GENERATE LOCK</h3>
<hr />
<div>
    <div>
        <form asp-action="GenerateLock">
            <a asp-action="Index">Back to Index</a>
            <div style="height:25px"></div>
            <div style="border-style:dotted;border-width:1px;border-color:black;
                    height:70px;vertical-align:text-bottom;padding-top:10px">
                <p style="color:crimson;text-align:center;width:99%;
                        font:normal 15px calibri">
                    This page helps in generating DB locks. This is achieved by simultaneous actions of  updating all the employees data with random values, and deleting few of those records under
                    a single transaction. Click "Generate DB Lock" button below to generate locks.
                </p>
            </div>
            <div style="height:30px"></div>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Generate DB Lock" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
